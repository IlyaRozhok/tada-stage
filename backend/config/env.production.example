# Database Configuration (AWS RDS)
DB_USERNAME=postgres
DB_PASSWORD=use_aws_secrets_manager
DB_NAME=rental_platform_prod
DB_HOST=tada-prod.xxxxx.eu-north-1.rds.amazonaws.com
DB_PORT=5432

# JWT Configuration
JWT_SECRET=use_aws_secrets_manager
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=production
PORT=3000

# CORS Configuration
CORS_ORIGIN=https://tada.com

# Security Configuration
BCRYPT_ROUNDS=14
SESSION_CLEANUP_INTERVAL=30m
MAX_SESSIONS_PER_DEVICE=2

# AWS Configuration
AWS_ACCESS_KEY_ID=use_iam_role
AWS_SECRET_ACCESS_KEY=use_iam_role
AWS_REGION=eu-north-1
AWS_S3_BUCKET_NAME=tada-media-bucket-prod

# Auth Configuration
GOOGLE_CLIENT_ID=production_google_client_id
GOOGLE_CLIENT_SECRET=use_aws_secrets_manager
GOOGLE_CALLBACK_URL=https://api.tada.com/auth/google/callback

# Frontend URL for redirects
FRONTEND_URL=https://tada.com

# Additional Production Settings
REDIS_URL=redis://tada-prod-cache.xxxxx.cache.amazonaws.com:6379
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn 